{% extends "Default/layout.html.twig" %}

{% block title %}{{ parent() }} - {{ 'rate_your_day' | trans }}{% endblock %}

{% block maincontent %}
    <form method="POST" class="well">
        <label for="karma">{{ 'rate_your_day' | trans }}</label>
        <select name="_karma" id="karma" class="span3">
            {% for i in range(1, 5) %}
                <option value="{{ i }}">{{ 'rating_' ~ i | trans }}</option>
            {% endfor %}
        </select>
        <input type="submit" class="btn btn-info" value="{{ 'rate' | trans }}" />
    </form>
{% endblock %}